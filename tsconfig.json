{
  "compilerOptions": {
    "target": "es5",
    "strict": true,                           
    "allowJs": true,
    "baseUrl": ".",
    "moduleResolution": "node",
    "paths": {
        "@server": ["./server/global.ts"],
        "@game/*": ["game/*"]
    },                           
    "esModuleInterop": true,                   
    "outDir": "./dist",
    "allowSyntheticDefaultImports": true
  },
  "exclude": ["./client", "./node_modules", "./dist"],
  "include": ["./**/*"]
}